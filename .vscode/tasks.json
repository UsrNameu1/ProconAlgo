{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & debug file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-o",
                "./bin/${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build & run file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-o",
                "./bin/${fileBasenameNoExtension}",
                "${file}",
                "&",
                "./bin/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}